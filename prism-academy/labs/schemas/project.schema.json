{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PrismProject",
  "type": "object",
  "required": ["id", "title", "objectives", "artifacts"],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "objectives": {
      "type": "array",
      "items": { "type": "string" }
    },
    "artifacts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "rubric": { "type": "object" },
    "badges": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
