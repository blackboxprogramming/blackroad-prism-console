  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "id",
      "type",
      "item_id",
      "from_rev",
      "to_rev",
      "reason",
      "risk",
      "status",
      "effects",
      "approvals"
    ],
    "properties": {
      "id": {"type": "string"},
      "type": {"type": "string", "enum": ["ECR", "ECO"]},
      "item_id": {"type": "string"},
      "from_rev": {"type": "string"},
      "to_rev": {"type": "string"},
      "reason": {"type": "string"},
      "risk": {"type": "string"},
      "status": {"type": "string"},
      "effects": {
        "type": "array",
        "items": {"type": "string"}
      },
      "approvals": {
        "type": "array",
        "items": {"type": "string"}
      }
    },
    "additionalProperties": false
  }
}
