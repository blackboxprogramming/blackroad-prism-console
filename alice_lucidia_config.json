{
  "project": "alice_lucidia",
  "version": "0.1.0",
  "created_at": "2025-10-23T20:01:51.384158Z",
  "models": {
    "encoder": "distilbert-base-uncased",
    "generator": "t5-small",
    "sentence_embedder": "sentence-transformers/all-MiniLM-L6-v2"
  },
