{
  "name": "blackroad-quantum",
  "private": true,
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.8"
  },
  "scripts": {
    "prepare": "husky install",
    "format": "prettier -w \"apps/**/*.html\"",
    "lint": "eslint --ext .js,.mjs,.cjs .",
    "test": "npm run lint"
  },
  "lint-staged": {
    "apps/**/*.html": [
      "prettier -w"
    ],
    "*.js": [
      "eslint --fix",
      "prettier -w"
    ]
  }
}
