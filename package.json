{
  "name": "blackroad-api",
  "version": "1.0.0",
  "private": true,
  "description": "BlackRoad.io backend API (Express + SQLite + Socket.IO)",
  "main": "server_full.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server_full.js",
    "dev": "nodemon server_full.js",
    "seed": "node scripts/seed_admin.js",
    "prepare": "husky",
    "lint": "eslint . --ext .js,.jsx,.mjs,.cjs || true",
    "format": "prettier -w .",
    "test": "node tests/smoke.test.mjs && node --test tests/backend-validation.test.js",
    "test": "node tests/test_auth.js && node tests/smoke.test.mjs",
    "dev:site": "npm --prefix sites/blackroad run dev",
    "build": "npm --prefix sites/blackroad run build",
    "fix-anything": "node .github/tools/codex-apply.js .github/prompts/codex-fix-anything.md || true"
  },
  "engines": {
    "node": ">=18.17"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.5",
    "systeminformation": "^5.25.11",
    "uuid": "^9.0.1",
    "better-sqlite3": "^9.4.3",
    "stripe": "^12.18.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}