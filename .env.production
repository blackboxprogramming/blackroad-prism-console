# Production Environment Configuration
# Copy this to .env on your droplet and update with real values

# API Configuration
NODE_ENV=production
PORT=8000

# Session & Security
SESSION_SECRET=CHANGE_ME_TO_RANDOM_STRING
INTERNAL_TOKEN=CHANGE_ME_TO_RANDOM_TOKEN
ALLOW_ORIGINS=https://blackroad.io,https://www.blackroad.io,https://blackroadinc.us

# Database
DB_PATH=/app/data/blackroad.db

# Service URLs (internal docker network)
LLM_URL=http://api:4000
MATH_ENGINE_URL=http://api:4000/math

# Feature Flags
ALLOW_SHELL=false

# Optional: OIDC Configuration
# OIDC_ISSUER=
# LOCAL_DEV_TOKEN=

# Optional: Economy Gateway
# ECONOMY_GATEWAY_ENDPOINT=
# ECONOMY_GATEWAY_TOKEN=

# Optional: Stripe
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=
