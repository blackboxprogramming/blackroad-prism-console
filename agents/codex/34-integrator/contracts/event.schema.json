{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Integrator Bus Event",
  "type": "object",
  "required": ["id", "source", "type", "timestamp", "data", "metadata"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "source": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "data": {
      "type": "object"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "consent_scope": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "mapper_version": {
          "type": ["string", "number"]
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "energy_j": {
      "type": "number",
      "minimum": 0
    },
    "replay": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}
