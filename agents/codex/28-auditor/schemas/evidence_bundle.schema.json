{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EvidenceBundle",
  "type": "object",
  "required": ["artifacts", "logs", "metrics", "metadata"],
  "properties": {
    "artifacts": {
      "type": "array",
      "items": {"type": ["object", "string"]}
    },
    "logs": {
      "type": "array",
      "items": {"type": "string"}
    },
    "metrics": {
      "type": "object"
    },
    "metadata": {
      "type": "object"
    },
    "hashes": {
      "type": "object"
    }
  },
  "additionalProperties": true
}
