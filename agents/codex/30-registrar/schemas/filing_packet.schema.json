{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://blackroad.io/schemas/codex30/filing_packet.json",
  "title": "Codex-30 Filing Packet",
  "type": "object",
  "required": [
    "id",
    "entity_id",
    "jurisdiction",
    "cycle",
    "due_date",
    "documents",
    "checklist",
    "payments",
    "receipts",
    "redactions"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {"type": "string", "pattern": "^fp-[a-z0-9-]+$"},
    "entity_id": {"type": "string", "minLength": 1},
    "jurisdiction": {"type": "string", "minLength": 2},
    "cycle": {"type": "string", "enum": ["annual", "quarterly", "biennial"]},
    "due_date": {"type": "string", "format": "date"},
    "documents": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "template", "status"],
        "additionalProperties": false,
        "properties": {
          "name": {"type": "string", "minLength": 1},
          "template": {"type": "string", "minLength": 1},
          "status": {"type": "string", "enum": ["draft", "signature", "filed"]},
          "notes": {"type": "string"}
        }
      }
    },
    "checklist": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["item", "status"],
        "additionalProperties": false,
        "properties": {
          "item": {"type": "string", "minLength": 1},
          "status": {"type": "string", "enum": ["pending", "blocked", "complete"]},
          "owner": {"type": "string"},
          "due": {"type": "string", "format": "date"}
        }
      }
    },
    "payments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["amount", "currency", "status"],
        "additionalProperties": false,
        "properties": {
          "amount": {"type": "number", "minimum": 0},
          "currency": {"type": "string", "pattern": "^[A-Z]{3}$"},
          "status": {"type": "string", "enum": ["unpaid", "queued", "paid"]},
          "reference": {"type": "string"},
          "due": {"type": "string", "format": "date"}
        }
      }
    },
    "receipts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["topic", "reference", "hash", "issued_at"],
        "additionalProperties": false,
        "properties": {
          "topic": {"type": "string", "minLength": 1},
          "reference": {"type": "string", "minLength": 1},
          "hash": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
          "issued_at": {"type": "string", "format": "date-time"}
        }
      }
    },
    "redactions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "previous", "redacted"],
        "additionalProperties": false,
        "properties": {
          "path": {"type": "string", "minLength": 1},
          "previous": {"type": "string"},
          "redacted": {"type": "string", "const": "[REDACTED]"}
        }
      }
    },
    "attestation": {
      "type": "object",
      "required": ["officer", "signed_at"],
      "additionalProperties": false,
      "properties": {
        "officer": {"type": "string", "minLength": 1},
        "signed_at": {"type": "string", "format": "date-time"},
        "notes": {"type": "string"}
      }
    }
  }
}
