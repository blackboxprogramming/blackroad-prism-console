{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://blackroad.io/schemas/codex30/license_record.json",
  "title": "Codex-30 License Record",
  "type": "object",
  "required": [
    "id",
    "entity_id",
    "jurisdiction",
    "license_type",
    "renewal_cycle",
    "renewal_due"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {"type": "string", "pattern": "^lic-[a-z0-9-]+$"},
    "entity_id": {"type": "string", "minLength": 1},
    "jurisdiction": {"type": "string", "minLength": 2},
    "license_type": {"type": "string", "minLength": 1},
    "renewal_cycle": {"type": "string", "enum": ["annual", "biennial", "quarterly"]},
    "renewal_due": {"type": "string", "format": "date"},
    "requirements": {
      "type": "array",
      "items": {"type": "string", "minLength": 1}
    },
    "fee": {"type": "number", "minimum": 0},
    "currency": {"type": "string", "pattern": "^[A-Z]{3}$"}
  }
}
