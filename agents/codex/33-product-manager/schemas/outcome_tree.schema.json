{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OutcomeTree",
  "type": "object",
  "required": ["goal", "outcomes", "created_at"],
  "properties": {
    "goal": {
      "type": "object",
      "required": ["title", "metric"],
      "properties": {
        "title": {"type": "string"},
        "metric": {"type": "string"},
        "horizon": {"type": "string"},
        "owner": {"type": "string"}
      }
    },
    "outcomes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "metric", "bets"],
        "properties": {
          "title": {"type": "string"},
          "metric": {"type": "string"},
          "leading_indicators": {
            "type": "array",
            "items": {"type": "string"}
          },
          "bets": {
            "type": "array",
            "items": {"$ref": "#/definitions/betRef"},
            "maxItems": 3
          }
        }
      }
    },
    "created_at": {"type": "string", "format": "date-time"}
  },
  "definitions": {
    "betRef": {
      "type": "object",
      "required": ["id", "title", "status"],
      "properties": {
        "id": {"type": "string"},
        "title": {"type": "string"},
        "status": {"type": "string", "enum": ["open", "win", "pivot", "kill"]}
      }
    }
  }
}
