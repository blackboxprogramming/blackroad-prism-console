{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Zonefile",
  "type": "object",
  "patternProperties": {
    "^[A-Za-z0-9._-]+$": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "value"],
        "properties": {
          "type": {"type": "string"},
          "value": {"type": "string"},
          "ttl": {"type": "integer", "minimum": 60}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
