blackroad.io, www.blackroad.io, blackroadinc.us {
  encode gzip

  handle_path /api/* {
    uri strip_prefix /api
    reverse_proxy api:8000
  }

  handle_path /metrics* {
    reverse_proxy api:8000
  }

  handle {
    reverse_proxy frontend:3000
  }
}
