#!/usr/bin/env bash
set -euo pipefail
INBOX="/var/lib/blackroad/queue/chem/inbox"
mkdir -p "$INBOX"
STAMP="$(date +%Y%m%d-%H%M%S)"
UUID="$(python3 - <<'PY'
import uuid;print(uuid.uuid4())
PY
)"
OUT="$INBOX/job-$STAMP-$UUID.json"
if [ "${1-}" = "-" ] || [ -z "${1-}" ]; then
  cat > "$OUT"
else
  cp "$1" "$OUT"
fi
echo "Submitted: $OUT"
