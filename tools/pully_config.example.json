{
  "label_rules": [
    { "label": "bug", "keywords": ["fix", "bug", "error", "panic"] },
    { "label": "feature", "keywords": ["add", "feature", "implement", "support"] },
    { "label": "docs", "keywords": ["readme", "doc", "documentation", "changelog"] }
  ],
  "file_rules": [
    { "pattern": "\\.md$", "label": "docs" },
    { "pattern": "tests?\\/|\\.spec\\.", "label": "tests" }
  ],
  "reviewer_rules": [
    { "reviewer": "@frontend-team", "paths": ["^src/frontend/", "\\.css$"], "labels": ["feature"] },
    { "reviewer": "@backend-team", "paths": ["^src/backend/", "^lib/"], "labels": ["bug"] }
  ]
}
