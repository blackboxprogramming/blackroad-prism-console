# MQTT broker configuration
PI_CORTEX_MQTT_HOST=localhost
PI_CORTEX_MQTT_PORT=1883

# Asset and content topics
PI_CORTEX_ASSET_DIR=assets
PI_CORTEX_ASSET_TOPIC=pi/assets/logo
PI_CORTEX_HOLO_TOPIC=pi/holo/text
PI_CORTEX_PANEL_TOPIC=pi/panel/text

# Audio configuration
PI_CORTEX_AUDIO_TOPIC=pi/audio/clip
PI_CORTEX_AUDIO_ASSET=clip.wav
PI_CORTEX_AUDIO_STATE_DIR=/var/lib/pi-cortex/audio
PI_CORTEX_AUDIO_AUTOPLAY=1
PI_CORTEX_AUDIO_PLAYER=aplay

# Optional heartbeat configuration
PI_CORTEX_HEARTBEAT_TOPIC=pi/ops/heartbeat
PI_CORTEX_HEARTBEAT_INTERVAL=30

# Web panel configuration
PI_CORTEX_PANEL_HOST=0.0.0.0
PI_CORTEX_PANEL_PORT=8000

# State directory overrides
PI_CORTEX_HOLO_STATE_DIR=/var/lib/pi-cortex/holo
PI_CORTEX_PANEL_STATE_DIR=/var/lib/pi-cortex/panel
