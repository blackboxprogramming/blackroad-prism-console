{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v1/schema.json",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "package": {
    "productName": "Lucidia Desktop",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "Lucidia Desktop",
        "width": 1280,
        "height": 800,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "allowlist": {
      "all": false,
      "shell": {
        "all": false
      },
      "fs": {
        "all": false
      }
    },
    "security": {
      "csp": null
    },
    "bundle": {
      "identifier": "com.blackroad.lucidia",
      "icon": [],
      "targets": ["app", "dmg", "msi", "appimage"]
    }
  }
}
