    "express": "^4.19.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "prisma": "^5.17.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.3"
  }
}
