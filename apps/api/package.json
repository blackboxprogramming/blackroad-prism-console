{
  "name": "blackroad-api",
  "version": "0.2.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --require ./src/lib/otel.ts dist/server.js || tsx src/server.ts",
    "build": "tsc -p tsconfig.json && prisma generate || true",
    "start": "node dist/server.js",
    "migrate": "prisma migrate deploy || true",
    "migrate:dev": "prisma migrate dev --name init || true",
    "lint": "eslint . || true",
    "test": "node --test",
    "release": "semantic-release",
    "zap": "echo \"run zap scan (stub)\"",
    "audit": "npm audit || true"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "openid-client": "^6.6.0",
    "node-fetch": "^3.3.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.51.1",
    "@opentelemetry/auto-instrumentations-node": "^0.51.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.51.1",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.51.1",
    "uuid": "^9.0.1",
    "yaml": "^2.5.0"
  },
  "devDependencies": {
    "semantic-release": "^24.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "typescript": "^5.4.0",
    "tsx": "^4.7.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.3"
  }
}
