AUTH_PORT=8082
AUTH_ENV=dev
AUTH_LOG_LEVEL=info

# JWT
AUTH_JWT_ALG=HS256
AUTH_JWT_ISS=https://auth.blackroad.local
AUTH_JWT_ACCESS_TTL_MIN=15
AUTH_JWT_REFRESH_TTL_DAYS=7
AUTH_JWT_HS_SECRET=dev-secret
AUTH_JWT_PRIVATE_KEY_PATH=
AUTH_JWT_PUBLIC_KEY_PATH=

# Rate limit
AUTH_RATE_LIMIT_RPM=120

# DB
AUTH_DB_URL=sqlite+aiosqlite:///./data/auth.db

# CORS
AUTH_CORS_ORIGINS=http://localhost:3000,https://console.blackroad.io

# Metrics
METRICS_ENABLED=true
