ROADVIEW_PORT=4001
ROADVIEW_ENV=dev
ROADVIEW_LOG_LEVEL=info

# DB
ROADVIEW_DB_URL=sqlite+aiosqlite:///./data/roadview.db

# Ranking weights (tuneable)
WEIGHT_TEXT=0.55
WEIGHT_DOMAIN=0.25
WEIGHT_RECENCY=0.15
WEIGHT_STRUCTURE=0.05

# CORS
ROADVIEW_CORS_ORIGINS=http://localhost:3000,https://console.blackroad.io

# Metrics
METRICS_ENABLED=true

# Crawler (optional; default disabled)
CRAWLER_ENABLED=false
CRAWLER_USER_AGENT=BlackRoadRoadView/1.0 (+https://blackroad.io)
CRAWLER_MAX_CONCURRENCY=4
