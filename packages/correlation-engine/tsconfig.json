{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "..",
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "tests/**/*", "../obs-mesh/src/**/*", "../../types/**/*.d.ts"],
  "exclude": ["dist", "node_modules"]
}
