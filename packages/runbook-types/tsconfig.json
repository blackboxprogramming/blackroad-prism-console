{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "allowJs": false,
    "resolveJsonModule": true,
    "stripInternal": true
  },
  "include": ["src/**/*"]
}
