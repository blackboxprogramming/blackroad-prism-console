{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "resolveJsonModule": true,
    "allowJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["tests/**/*"]
}
