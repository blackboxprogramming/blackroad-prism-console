{
  "name": "@blackroad/runbook-lint",
  "version": "0.1.0",
  "description": "CLI for validating BlackRoad runbooks",
  "type": "module",
  "bin": {
    "runbook-lint": "dist/cli.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm --filter @blackroad/runbook-types run build && tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "lint": "node dist/cli.js",
    "test": "vitest run"
  },
  "dependencies": {
    "@blackroad/runbook-types": "workspace:^",
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2",
    "picocolors": "^1.0.0",
    "yaml": "^2.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "rimraf": "^5.0.7",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  }
}
