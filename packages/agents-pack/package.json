{
  "name": "@blackroad/agents-pack",
  "version": "0.1.0",
  "description": "Schemas, validators, and conformance tests for BlackRoad agents",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "schemas",
    "examples",
    "src",
    "tests"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "check": "node scripts/validate-schemas.cjs && pnpm test",
    "lint": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
