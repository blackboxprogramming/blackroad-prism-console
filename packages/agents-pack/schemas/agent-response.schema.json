{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://blackroad.ai/agents/schemas/agent-response.schema.json",
  "title": "Agent Orchestration Response",
  "type": "object",
  "required": [
    "response_id",
    "request_id",
    "timestamp",
    "status",
    "messages"
  ],
  "properties": {
    "response_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-]{10,128}$"
    },
    "request_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-]{10,128}$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": [
        "success",
        "error",
        "invalid_request",
        "rate_limited"
      ]
    },
    "messages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/message"
      }
    },
    "error": {
      "type": "object",
      "required": ["type", "message"],
      "properties": {
        "type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "metrics": {
      "type": "object",
      "properties": {
        "latency_ms": {
          "type": "number",
          "minimum": 0
        },
        "token_usage": {
          "type": "object",
          "properties": {
            "prompt_tokens": {
              "type": "integer",
              "minimum": 0
            },
            "completion_tokens": {
              "type": "integer",
              "minimum": 0
            },
            "total_tokens": {
              "type": "integer",
              "minimum": 0
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "$defs": {
    "toolCall": {
      "type": "object",
      "required": ["id", "tool", "input"],
      "properties": {
        "id": {
          "type": "string"
        },
        "tool": {
          "type": "string",
          "pattern": "^[a-zA-Z][a-zA-Z0-9_-]{2,63}$"
        },
        "input": {},
        "metadata": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "message": {
      "type": "object",
      "required": ["role"],
      "properties": {
        "id": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": ["assistant", "tool"]
        },
        "content": {
          "type": "string"
        },
        "tool_calls": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/toolCall"
          }
        },
        "tool_call_id": {
          "type": "string"
        },
        "metadata": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": {
              "role": {
                "const": "assistant"
              }
            }
          },
          "then": {
            "anyOf": [
              {
                "required": ["content"]
              },
              {
                "required": ["tool_calls"]
              }
            ]
          }
        },
        {
          "if": {
            "properties": {
              "role": {
                "const": "tool"
              }
            }
          },
          "then": {
            "required": ["tool_call_id", "content"]
          }
        }
      ]
    }
  }
}
