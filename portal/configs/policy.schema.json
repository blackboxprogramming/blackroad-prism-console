{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Portal Policy Request",
  "type": "object",
  "required": ["utc", "action", "label", "chain", "policy", "payload"],
  "properties": {
    "utc": {"type": "string"},
    "action": {"type": "string", "enum": ["CREATE_PSBT", "BROADCAST", "FREEZE_UTXO", "THAW_UTXO"]},
    "label": {"type": "string"},
    "chain": {"type": "string", "enum": ["bitcoin"]},
    "policy": {
      "type": "object",
      "required": ["version", "threshold", "members"],
      "properties": {
        "version": {"type": "string", "const": "1"},
        "threshold": {"type": "integer", "minimum": 1, "maximum": 15},
        "members": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "pubkey"],
            "properties": {
              "id": {"type": "string"},
              "pubkey": {"type": "string"}
            }
          }
        }
      }
    },
    "payload": {
      "type": "object",
      "properties": {
        "outputs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["address", "amount_btc"],
            "properties": {
              "address": {"type": "string"},
              "amount_btc": {"type": "string"}
            }
          }
        },
        "fee_rate_sat_vb": {"type": "integer", "minimum": 1},
        "coin_control": {
          "type": "object",
          "properties": {
            "include_utxos": {"type": "array", "items": {"type": "string"}},
            "exclude_utxos": {"type": "array", "items": {"type": "string"}}
          }
        }
      },
      "required": ["outputs", "fee_rate_sat_vb"]
    }
  }
}
